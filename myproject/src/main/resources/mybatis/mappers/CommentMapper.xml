<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.myspring.myproject.board.mapper.CommentMapper">

	<resultMap id="CommentMap"
		type="com.myspring.myproject.board.dto.CommentDTO">
		<id property="id" column="id" />
		<result property="articleId" column="articleId" />
		<result property="parentId" column="parentId" />
		<result property="writer" column="writer" />
		<result property="content" column="content" />
		<result property="writeDate" column="writeDate" />
		<result property="updateDate" column="updateDate" />
	</resultMap>

	<select id="listByArticle" resultMap="CommentMap"
		parameterType="long">
		SELECT id, articleId, parentId, writer, content, writeDate, updateDate
		FROM comments
		WHERE articleId = #{articleId}
		ORDER BY writeDate ASC, id ASC
	</select>

	<insert id="insert"
		parameterType="com.myspring.myproject.board.dto.CommentDTO"
		useGeneratedKeys="true" keyProperty="id">
		INSERT INTO comments (articleId, parentId, writer, content)
		VALUES (#{articleId}, #{parentId}, #{writer}, #{content})
	</insert>

	<delete id="deleteById">
		DELETE FROM comments WHERE id = #{id}
	</delete>

	<delete id="deleteByArticle">
		DELETE FROM comments WHERE articleId = #{articleId}
	</delete>
</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>

	<!-- 공통 레이아웃 -->
	<definition name="layout"
		template="/WEB-INF/views/common/layout.jsp">
		<put-attribute name="title" value="" />
		<put-attribute name="header"
			value="/WEB-INF/views/common/header.jsp" />
		<put-attribute name="footer"
			value="/WEB-INF/views/common/footer.jsp" />
		<put-attribute name="body" value="" />
	</definition>

	<!-- 메인 페이지: main.do -->
	<definition name="main" extends="layout">
		<put-attribute name="title" value="Main" />
		<put-attribute name="body"
			value="/WEB-INF/views/main.jsp" />
	</definition>

	<!-- 게시판 목록 -->
	<definition name="board/listArticles" extends="layout">
		<put-attribute name="title" value="기사 목록" />
		<put-attribute name="body"
			value="/WEB-INF/views/board/listArticles.jsp" />
	</definition>

	<!-- 글쓰기 -->
	<definition name="board/articleForm" extends="layout">
		<put-attribute name="title" value="글쓰기" />
		<put-attribute name="body"
			value="/WEB-INF/views/board/articleForm.jsp" />
	</definition>

	<!-- 수정하기 -->
	<definition name="board/modArticleForm" extends="layout">
		<put-attribute name="title" value="수정하기" />
		<put-attribute name="body"
			value="/WEB-INF/views/board/modArticleForm.jsp" />
	</definition>

	<!-- board/* 와일드카드 (실제 파일명과 매핑) -->
	<definition name="board/*" extends="layout">
		<put-attribute name="title" value="게시판" />
		<put-attribute name="body"
			value="/WEB-INF/views/board/{1}.jsp" />
	</definition>

	<!-- 게시글 보기 (파일명이 body.jsp라서 별도 매핑 유지) -->
	<definition name="board/viewArticle" extends="layout">
		<put-attribute name="title" value="게시글 보기" />
		<put-attribute name="body"
			value="/WEB-INF/views/board/viewArticle.body.jsp" />
	</definition>

</tiles-definitions>
